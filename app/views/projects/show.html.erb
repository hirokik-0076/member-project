<% provide(:title, @project.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="project_info">
      <h1>
        <%= @project.name %> 
        <br>
        <%= @project.content %>
        <br>
        <%= @project.skill %>
        <br>
        <%= @project.status %>
        <br>
        <%= @project.member %>

        <ul>
          <% @projects.each do |project| %>
            <li>
              <label>
                <% checked = project.members.exists?(@member.id) ? true : false %>
                <%= f.check_box 'project_ids', { :name => 'member[project_ids][]', :checked => checked }, project.id, nil %>
                <%= project.name %>
              </label>
            </li>
          <% end %>
        </ul>
      </h1>
    </section>
  </aside>
</div>