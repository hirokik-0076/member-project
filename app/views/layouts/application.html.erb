<!DOCTYPE html>
    <html> 
        <head> 
            <title> AuthFirebaseTest2 </title>
                <!-- firebase -->
                <%= csrf_meta_tags %> 
                <script src="https://www.gstatic.com/firebasejs/5.8.4/firebase-app.js"> </script>
                <script src="https://www.gstatic.com/firebasejs/5.8.4/firebase-auth.js"> </script> 
                <script src="https://www.gstatic.com/firebasejs/ui/3.5.2/firebase-ui-auth__ja.js"> </script>
                <link href="https://www.gstatic.com/firebasejs/ui/3.5.2/firebase-ui-auth.css" rel="stylesheet" type="text/css" /> 
                <link href="https://fonts.googleapis.com/css?family=M+PLUS+Rounded+1c" rel="stylesheet" /> 
                <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %> 
                <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %> 
                <meta content="width=device-width, initial-scale=1" name="viewport" /> 
                <!-- member -->
                <%= csrf_meta_tags %>
                <%= stylesheet_link_tag    'application', media: 'all',
                                        'data-turbolinks-track': 'reload' %>
                <%= javascript_include_tag 'application',
                                        'data-turbolinks-track': 'reload' %>

                <%= render 'layouts/shim' %>
        </head> 
            <body> 
                <%= render 'layouts/header' %>

                <div class="container"> 
                    <% flash.each do |message_type, message| %>
                        <%= content_tag(:div, message, class: "alert alert-#{message_type}") %> 
                        <% end; if logged_in? %>
                            <div class="user-info"> ログインユーザ：<%= current_user.email %> 
                                <span style="margin-left:1em"> 
                                     <%= link_to 'ログアウト', '', onclick: 'firebaseLogout();return false;' %> 
                                 </span>
                                 
                                <span style="margin-left:1em"> 
                                    <%= link_to 'アカウント削除', '', onclick: 'firebaseUserDelete();return false;' %> 
                                 </span>
                            </div>
                         <% end %>
                    <%= yield %> 
                </div>


                <%= render 'layouts/footer' %>
            </body>
    </html>